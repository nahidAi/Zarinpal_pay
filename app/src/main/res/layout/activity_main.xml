<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tset.zarinpal.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2aadea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZarinPal"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/editText_main"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/toolbar"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:hint="مبلغ مورد نظر خود را اینجا وارد کنید"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_main_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="مشاهده نتیجه تراکنش"
        android:background="#e2e0e0"
        android:padding="15dp"
        android:layout_below="@id/editText_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_purchase"
        android:layout_width="wrap_content"
        android:text="درگاه پرداخت زرین پال"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content" />

</RelativeLayout>
